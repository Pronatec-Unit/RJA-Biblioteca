<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a4802.rjabiblioteca.TelaEFII"
    android:background="@drawable/fnd"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ensino Fundamental II"
        android:id="@+id/textView3"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold|italic"
        android:textSize="30dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Português"
        android:id="@+id/efiiport"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matemática"
        android:id="@+id/efiimat"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="História"
        android:id="@+id/efiihis"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Geografia"
        android:id="@+id/efiigeo"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ciência"
        android:id="@+id/efiicie"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Língua Estrangeira"
        android:id="@+id/efiilse"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:layout_marginTop="10dp" />

</LinearLayout>
