        android:text="ENSINO FUNDAMENTAL II"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_below="@+id/botefI"
        android:layout_alignStart="@+id/botefI"
        android:layout_marginTop="56dp"
        android:textColor="@android:color/black"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botem"
        android:minHeight="40dp"
        android:minWidth="300dp"
        android:background="@android:color/white"
        android:text="ENSINO MÃ‰DIO"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/botefII"
        android:layout_alignStart="@+id/botefII"
        android:textColor="@android:color/black"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botrom"
        android:minHeight="40dp"
        android:minWidth="300dp"
        android:background="@android:color/white"
        android:text="ROMANCES"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_below="@+id/botem"
        android:layout_alignStart="@+id/botem"
        android:layout_marginTop="59dp"
        android:textColor="@android:color/black"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="RJA Bibliotecas"
    android:id="@+id/extractEditText"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:background="@android:color/background_light"
    android:textColor="@android:color/black"
    android:textAlignment="center"
    android:textSize="30dp"
    android:maxHeight="30dp" />

</RelativeLayout>
