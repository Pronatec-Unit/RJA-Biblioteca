<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RJA Bibliotecas"
        android:id="@+id/extractEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/background_light"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textSize="30dp"
        android:maxHeight="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ensino Médio"
        android:id="@+id/textView4"
        android:layout_marginTop="25dp"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_below="@+id/extractEditText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Português"
        android:id="@+id/button12"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:background="@android:color/background_light"
        android:textAlignment="center"
        android:minHeight="30dp"
        android:minWidth="300dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/button13" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matemática"
        android:id="@+id/button13"
        android:layout_marginTop="9dp"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:background="@android:color/background_light"
        android:textAlignment="center"
        android:minHeight="30dp"
        android:minWidth="300dp"
        android:layout_below="@+id/button12"
        android:layout_alignStart="@+id/button14" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="História"
        android:id="@+id/button14"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:background="@android:color/background_light"
        android:textAlignment="center"
        android:minHeight="30dp"
        android:minWidth="300dp"
        android:layout_below="@+id/button13"
        android:layout_alignStart="@+id/button15" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Física"
        android:id="@+id/button15"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:background="@android:color/background_light"
        android:textAlignment="center"
        android:minHeight="30dp"
        android:minWidth="300dp"
        android:layout_below="@+id/button14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Química"
        android:id="@+id/button16"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:background="@android:color/background_light"
        android:textAlignment="center"
        android:minHeight="30dp"
        android:minWidth="300dp"
        android:layout_below="@+id/button15"
        android:layout_alignStart="@+id/button15"
        android:layout_marginTop="7dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biologia"
        android:id="@+id/button17"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:background="@android:color/background_light"
        android:textAlignment="center"
        android:minHeight="30dp"
        android:minWidth="300dp"
        android:layout_below="@+id/button16"
        android:layout_alignStart="@+id/button16"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geografia"
        android:id="@+id/button18"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:background="@android:color/background_light"
        android:textAlignment="center"
        android:minHeight="30dp"
        android:minWidth="300dp"
        android:layout_below="@+id/button17"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Línguas Estrangeiras"
        android:id="@+id/button19"
        android:layout_marginTop="9dp"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:background="@android:color/background_light"
        android:textAlignment="center"
        android:minHeight="30dp"
        android:minWidth="300dp"
        android:layout_below="@+id/button18"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Literatura"
        android:id="@+id/button20"
        android:layout_marginTop="13dp"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:background="@android:color/background_light"
        android:textAlignment="center"
        android:minHeight="30dp"
        android:minWidth="300dp"
        android:layout_below="@+id/button19"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filosofia"
        android:id="@+id/button21"
        android:layout_marginTop="11dp"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:background="@android:color/background_light"
        android:textAlignment="center"
        android:minHeight="30dp"
        android:minWidth="300dp"
        android:layout_below="@+id/button20"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sociologia"
        android:id="@+id/button22"
        android:layout_marginTop="12dp"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:background="@android:color/background_light"
        android:textAlignment="center"
        android:minHeight="30dp"
        android:minWidth="300dp"
        android:layout_below="@+id/button21"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

